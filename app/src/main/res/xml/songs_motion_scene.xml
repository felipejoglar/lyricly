<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/nestedscrollview_song_lyricscontainer"
            app:touchAnchorSide="top" />

        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0.0"
                android:scaleY="0.0"
                android:visibility="invisible"
                app:framePosition="75"
                app:motionTarget="@id/floatingactionbutton_song_favorite" />
            <KeyAttribute
                android:elevation="0dp"
                app:framePosition="99"
                app:motionTarget="@id/constraintlayout_song_titlebackground" />
            <KeyAttribute
                android:elevation="4dp"
                app:framePosition="100"
                app:motionTarget="@id/constraintlayout_song_titlebackground" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/imageview_song_cover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/floatingactionbutton_song_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin_normal"
            app:layout_constraintBottom_toBottomOf="@id/imageview_song_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_song_cover" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/imageview_song_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/floatingactionbutton_song_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_margin_normal"
            android:scaleX="0.0"
            android:scaleY="0.0"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/imageview_song_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_song_cover" />
    </ConstraintSet>
</MotionScene>