<resources>

    <!--STYLES-->
    <!--Components-->

    <!--Toolbar-->
    <style name="Widget.Lyricly.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary" />

    <!--AppBar-->
    <style name="Widget.Lyricly.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:popupTheme">@style/Theme.Lyricly.PopupTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Bottom Navigation View-->
    <style name="Widget.Lyricly.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_view_item</item>
        <item name="itemTextColor">@color/bottom_navigation_view_item</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.Lyricly.Subtitle2</item>
    </style>

    <!--Buttons-->
    <style name="Widget.Lyricly.Button.TextButton.Condensed" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="Widget.Lyricly.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/OverlayShapeAppearance.Lyricly.SmallComponent</item>
    </style>
</resources>
